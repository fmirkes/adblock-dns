---
version: "2"

volumes:
  adblock-dns-dnsmasq:
  adblock-dns-pixelserv:

services:
  dnsmasq:
    image: adblock-dns-dnsmasq
    build: ./dnsmasq
    container_name: adblock-dns-dnsmasq
    depends_on: 
      - pixelserv-tls
    restart: always
    env_file: adblock-dns.env
    ports:
      - "127.0.0.1:53:53"
      - "127.0.0.1:53:53/udp"
      - "::1:53:53"
      - "::1:53:53/udp"
    volumes:
      - "adblock-dns-dnsmasq:/etc/dnsmasq.d"
  
  pixelserv-tls:
    image: adblock-dns-pixelserv
    build: ./pixelserv
    container_name: adblock-dns-pixelserv
    restart: always
    ports:
      - "127.0.0.1:80:80"
      - "127.0.0.1:443:443"
      - "::1:80:80"
      - "::1:443:443"
    volumes:
      - "adblock-dns-pixelserv:/var/cache/pixelserv"
